{{#if avatarUrl}}
  <img src={{avatarUrl}} alt={{avatarName}} class="avatar" >
{{else}}
 {{ember-initials class="avatar"
     size=50
     name=avatarName
     seedText=avatarName
     defaultName='?'
     textColor="white"
     fontSize=55
     fontWeight=100
     fontFamily="Helvetica Neue Light, Arial, sans-serif"
 }}
{{/if}}