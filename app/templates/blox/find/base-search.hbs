<!-- app/templates/bloxmy/index.hbs -->


    {{#if model.length}}

        {{#each model as |item|}}

          {{#paper-card as |card|}}
            {{#card.header  as |header|}}
              {{#header.avatar}}
                {{user-avatar name=item.name image=item.avatarUrl}}
              {{/header.avatar}}
              {{#header.text as |text|}}
                {{#text.subhead}}
                  <span class="username">{{item.name}}</span>
                  {{#if item.space}}
                    {{paper-icon "domain"}} {{item.space.title}},
                  {{else}}
                    {{paper-icon "account"}} {{item.owner.name}}
                  {{/if}}
                {{/text.subhead}}
                {{#text.title}}
                  <h3>{{item.title}}</h3>
                {{/text.title}}
              {{/header.text}}
            {{/card.header}}
            {{#card.content}}
                <p>{{item.description}}</p>
              {{!card.media size="sm" src=item.bannerUrl alt="preview"}}
            {{/card.content}}
            {{#card.actions class="layout-row  layout-xs-column layout-align-start-end"}}
              {{#paper-button onClick=(action (transition-to "blox.block.activity" item))}}Activity{{/paper-button}}
              {{#paper-button onClick=(action (transition-to "blox.block.apps" item))}}Apps{{/paper-button}}
              {{#paper-button onClick=(action (transition-to "blox.block.members" item))}}Members{{/paper-button}}
              {{#paper-button onClick=(action (transition-to "blox.block.settings" item))}}Settings{{/paper-button}}
            {{/card.actions}}
          {{/paper-card}}

      {{/each}}
    {{else}}

        <p>
         This blox found
        </p>

    {{/if}}

